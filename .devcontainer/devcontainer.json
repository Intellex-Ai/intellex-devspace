{
  "name": "Intellex Devspace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "remoteUser": "vscode",

  // ðŸ§° ALL your tools here
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "pnpm": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {},
    
    // ðŸ” SSHD FEATURE â€” REQUIRED FOR CURSOR
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },

  // ðŸ›‘ Codespaces containers block services unless permissions added
  "runArgs": [
    "--cap-add=SYS_ADMIN",
    "--security-opt=apparmor=unconfined"
  ],

  // ðŸš€ Ensure passwordless sudo is configured for vscode user (runs as root after features)
  "updateContentCommand": "echo 'vscode ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers.d/vscode && chmod 0440 /etc/sudoers.d/vscode",
  
  // ðŸš€ Run your workflow + enable SSH every time container starts
  "postStartCommand": "sudo ssh-keygen -A && sudo service ssh restart && bash /workspaces/${containerWorkspaceFolderBasename}/.devcontainer/setup.sh",

  // âœ¨ VS Code extensions also apply to Cursor
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "mhutchie.git-graph",
        "ms-python.python"
      ]
    }
  }
}
